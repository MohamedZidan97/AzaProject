<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
@model List<Buying_Proccess>

@if (!Model.Any())
{
    <div class="alert alert-warning text-center" role="alert">
        <i class="fas fa-exclamation-circle"></i> No Product Shipped !!
    </div>
}

<div class="d-flex flex-wrap justify-content-between">
    @foreach (var item in Model)
    {
        <div class="card shadow-sm" style="width: 18rem; margin: 10px; border-radius: 10px;">
            <img src="/Files/Images/@item.product_image" class="card-img-top" alt="Product Image" style="height: 250px; object-fit: cover; border-top-left-radius: 10px; border-top-right-radius: 10px;">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-box-open"></i> @item.product_name
                </h5>
                <h5 class="card-subtitle mb-2 text-muted">
                    <i class="fas fa-dollar-sign"></i> @item.product_price
                </h5>

                <div class="customer-info border-top mt-3 pt-2">
                    <p class="card-text"><strong><i class="fas fa-user"></i> Customer Name:</strong> @item.customer_name</p>
                    <p class="card-text"><strong><i class="fas fa-map-marker-alt"></i> Customer Address:</strong> @item.customer_address</p>
                    <p class="card-text"><strong><i class="fas fa-phone"></i> Customer Phone:</strong> @item.customer_phone</p>
                </div>
            </div>
            <div class="card-footer text-center bg-light">
                <button class="btn btn-primary btn-sm"><i class="fas fa-truck"></i> Track Shipping</button>
            </div>
        </div>
    }
</div>
