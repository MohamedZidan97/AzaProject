<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
@model List<ProductShipped>

@if (!Model.Any())
{
    <div class="alert alert-warning" role="alert">
        No Product In Your Shopping Cart To Show !!
    </div>
}

<div class="d-flex flex-wrap justify-content-between">
    @foreach (var product in Model)
    {
        <div class="card shadow-sm" style="width: 18rem; margin: 10px;">
            <img src="/Files/Images/@product.Product_Image" class="card-img-top" alt="..." style="height: 250px; object-fit: cover;">
            <div class="card-body">
                <h5 class="card-title">@product.Product_Name</h5>
                <h5 class="card-subtitle mb-2 text-muted">@product.Product_Price</h5>

                <!-- Supplier Information Section -->
                <div class="supplier-info border-top mt-3 pt-2">
                    <p class="card-text"><strong>Supplier Name:</strong> @product.Supplier_Name</p>
                    <p class="card-text">
                        <a href="mailto:@product.Supplier_Email" class="text-primary text-decoration-underline">@product.Supplier_Email</a>
                    </p>
                    <p class="card-text"><strong>Supplier Phone:</strong> @product.Supplier_Phone</p>
                </div>

                <!-- Buy Now Button with Icon -->
                <div class="d-flex justify-content-end mt-3">
                    <a href="#" class="btn btn-primary" style="color: white;">
                        <i class="fa fa-shopping-cart"></i> Buy Now
                    </a>
                </div>
            </div>
        </div>
    }
</div>
