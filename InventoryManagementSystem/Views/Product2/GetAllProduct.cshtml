@* SEIF SHERIF *@
@model IEnumerable<Product_Details_ViewModel>
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <div class="container mt-3">
        @if (!Model.Any())
        {
            <div class="alert alert-warning" role="alert">
                No Product Found !!
            </div>
        }
        else
        {
            <table class="table table-dark table-hover">
                <thead>
                    <tr>
                        <th>Supplier_Name</th>
                        <th>Product_Image</th>
                        <th>Product_Name</th>
                        <th>Product_Stock</th>
                        <th>Product_Low_Stock</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Supplier_Name</td>
                            <th><img src="/Files/Images/@product.Product_Image" style="height:60px;width:60px" /></th>
                            <td>@product.Product_Name</td>
                            <td>@product.Product_Stock</td>
                            <td>@product.Product_Low_Stock</td>
                            <td>
                                @if (product.Product_Stock <= product.Product_Low_Stock)
                                {
                                    <span class="badge bg-danger">Low Stock</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">In Stock</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</body>
</html>
