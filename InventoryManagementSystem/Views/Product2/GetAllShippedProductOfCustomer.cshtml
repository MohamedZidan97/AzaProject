<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
@model List<ProductShipped>

@if (!Model.Any())
{
    <div class="alert alert-warning text-center" role="alert">
        <i class="fas fa-exclamation-circle"></i> No Product In Your Shopping Cart To Show !!
    </div>
}


@if (TempData["Check"] != null)
{
    <div class="alert alert-warning text-center" role="alert">
        <i class="fas fa-exclamation-circle"></i> @TempData["Check"] !!
    </div>
}
<div class="d-flex flex-wrap justify-content-between">
    @foreach (var product in Model)
    {
        <div class="card shadow-sm" style="width: 18rem; margin: 10px; border-radius: 10px;">
            <img src="/Files/Images/@product.Product_Image" class="card-img-top" alt="Product Image" style="height: 250px; object-fit: cover; border-top-left-radius: 10px; border-top-right-radius: 10px;">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-box-open"></i> @product.Product_Name
                </h5>
                <h5 class="card-subtitle mb-2 text-muted">
                    <i class="fas fa-dollar-sign"></i> @product.Product_Price
                </h5>

                <div class="supplier-info border-top mt-3 pt-2">
                    <p class="card-text"><strong><i class="fas fa-user"></i> Supplier Name:</strong> @product.Supplier_Name</p>
                    <p class="card-text">
                        <a href="mailto:@product.Supplier_Email" class="text-primary text-decoration-underline"><i class="fas fa-envelope"></i> @product.Supplier_Email</a>
                    </p>
                    <p class="card-text"><strong><i class="fas fa-phone"></i> Supplier Phone:</strong> @product.Supplier_Phone</p>
                </div>

                <div class="d-flex justify-content-end mt-3">
                    <a href="/Product2/Go_To_Buying_Form?&product_id=@product.Product_Id&supplier_id=@product.Supplier_Id&supplier_name=@product.Supplier_Name&product_name=@product.Product_Name&product_price=@product.Product_Price&product_image=@product.Product_Image&customer_name=@product.Customer_Name" class="btn btn-primary" style="color: white; margin-right: 10px;">
                        <i class="fa fa-shopping-cart"></i> Buy Now
                    </a>
                    <form action="/Product2/Delete_Product_From_Shipping_Cart?product_id=@product.Product_Id" method="post" style="display: inline;">
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i> Delete
                        </button>
                    </form>
                </div>

            </div>
        </div>
    }
</div>
