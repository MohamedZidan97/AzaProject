@* SEIF SHERIF *@
@model IEnumerable<Supplier_Details_ViewModel>
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <div class="container mt-3">
        @if (!Model.Any())
        {
            <div class="alert alert-warning" role="alert">
                No Supplier Found !!
            </div>
        }
        else
        {
            <table class="table table-dark table-hover">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Id</th>
                        <th>First_Name</th>
                        <th>Last_Name</th>
                        <th>User_Name</th>
                        <th>Email</th>
                        <th>Phone_Number</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var supplier in Model)
                    {
                        <tr>
                            <td><img src="/Files/Images/@supplier.Supplier_Image" style="height:60px;width:60px" /></td>
                            <td>@supplier.Supplier_Id</td>
                            <td>@supplier.Supplier_First_Name</td>
                            <td>@supplier.Supplier_Last_Name</td>
                            <td>@supplier.Supplier_UserName</td>
                            <td>@supplier.Supplier_Email</td>
                            <td>@supplier.Supplier_PhoneNumber</td>
                            <td>
                                <a href="/Supplier/Delete_Supplier?supplierid=@supplier.Supplier_Id" class="btn btn-danger btn-sm" style="color: white;">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                                <a href="/Supplier/Go_To_Update_Supplier_Form?supplierid=@supplier.Supplier_Id" class="btn btn-primary btn-sm" style="color: white; margin-left: 5px;">
                                    <i class="fas fa-edit"></i> Update
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        <div class="text-end mt-4">
            <a href="/Supplier/Go_To_Add_Supplier_Form" class="btn btn-dark btn-lg" style="color: white;">
                <i class="fas fa-plus"></i> Add Supplier
            </a>
        </div>
    </div>
</body>
</html>
