<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
@model List<Report_Details_ModelView>
@if (!Model.Any())
{
    <div class="alert alert-warning text-center" role="alert">
        <i class="fas fa-exclamation-triangle"></i> No Reports Found !!
    </div>
}
@if (User.IsInRole("Supplier"))
{
    <div class="d-flex flex-wrap justify-content-start">
        @foreach (var report_detail in Model)
        {
            <div class="card shadow-lg m-3" style="width: 18rem; border-radius: 15px; overflow: hidden; transition: transform 0.3s;">
                <img src="/Files/Images/Report!.jpg" class="card-img-top" alt="Report Image" style="height: 250px; object-fit: cover;">
                <div class="card-body text-center">
                    <h5 class="card-title">
                        <i class="fas fa-user"></i> @report_detail.Reporter_Name
                    </h5>
                    <h6 class="card-subtitle mb-2 text-muted">
                        <i class="fas fa-box"></i> @report_detail.Product_Name
                    </h6>
                    <p class="card-text">
                        <i class="fas fa-info-circle"></i> @report_detail.product_Description
                    </p>
                    <span class="badge bg-danger">
                        <i class="fas fa-exclamation-triangle"></i> Low Stock
                    </span>
                </div>
            </div>
        }
    </div>
}
@if (User.IsInRole("Admin"))
{
    int i = 0;
    <div class="d-flex flex-wrap justify-content-between">
        @foreach (var report_detail in Model)
        {
            <div class="card shadow-lg m-3" style="width: 19rem; border-radius: 15px; overflow: hidden; transition: transform 0.3s;">
                <img src="/Files/Images/Report!.jpg" class="card-img-top" alt="Report Image" style="height: 250px; object-fit: cover;">
                <div class="card-body text-center">
                    <h5 class="card-title">
                        <i class="fas fa-user"></i> @report_detail.Reported_Name
                    </h5>
                    <h6 class="card-subtitle mb-2 text-muted">
                        <i class="fas fa-box"></i> @report_detail.Product_Name
                    </h6>
                    <p class="card-text">
                        <i class="fas fa-info-circle"></i> @report_detail.product_Description
                    </p>
                    @if (ViewBag.Flags[i] == 1)
                    {
                        <span class="badge bg-success">
                            <i class="fas fa-check-circle"></i> In Stock
                        </span>
                    }
                    @if (ViewBag.Flags[i] == 0)
                    {
                        <span class="badge bg-danger">
                            <i class="fas fa-exclamation-triangle"></i> Low Stock
                        </span>
                    }
                    @if (ViewBag.Flags[i] == -1)
                    {
                        <span class="badge bg-secondary">
                            <i class="fas fa-trash-alt"></i> This Product Deleted
                        </span>
                    }
                    <a href="/Dashboard/Delete_Report?report_id=@report_detail.Report_Id" class="btn btn-danger" style="color: white; margin-left: 5px;">
                        <i class="fas fa-trash-alt"></i> Delete Report
                    </a>
                </div>
            </div>
            i++;
        }
    </div>
}

